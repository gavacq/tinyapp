<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-primary">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>

    <% if(user){ %>
      <form method="POST" action="/logout" class="form-inline">
        <div class="form-group">
          Logged in as: <%= user.email %>
        </div>
        <label for="logout"></label>
        <button type="submit" class="btn">Logout</button>
      </form>
      <% } else{ %>
        <div>
          <label for="register" class="sr-only"></label>
          <button type="button" onclick="location.href='/register'" class=" btn">Register</button>
          <label for="login" class="sr-only"></label>
          <button type="button" onclick="location.href='/login'" class="btn">Login</button>
        </div>
        <% } %>
  </nav>
</header>