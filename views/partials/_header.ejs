<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-primary">
    <a class="navbar-brand" style="font-size: x-large;" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create Tiny URL</a>
      </div>
      <div class="ml-auto">
        <% if(user){ %>
        <form method="POST" action="/logout" class="form-inline">
          <div class="form-group">
            <label for="logout" class="pr-3" id="logout-label"><%= user.email %></label>
            <button id="logout" type="submit" class="btn pl-0 btn-user">Logout</button>
        </form>
      </div>
      <% } else{ %>
      <div class="btn-user-container">
        <div>
          <label for="register" class="sr-only"></label>
          <button id="register" type="button" onclick="location.href='/register'"
            class=" btn pl-0 pr-4 btn-user">Register</button>
        </div>
        <div>
          <label for="login" class="sr-only"></label>
          <button id="register" type=" button" onclick="location.href='/login'" class="btn pl-0 btn-user">Login</button>
        </div>
      </div>
      <% } %>
    </div>
  </nav>
</header>