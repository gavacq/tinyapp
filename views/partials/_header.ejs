<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <button type="button" onclick="location.href='/register'" class=" btn btn-primary">Register</button>
    <% if(user){ %>
      <form method="POST" action="/logout" class="form-inline">
        <label for="logout" class="font-weight-bold">
          <%= user.email %>
        </label>
        <button type="submit" class="btn btn-dark">Logout</button>
      </form>
      <% } else{ %>
        <form method="POST" action="/login" class="form-inline">
          <label for="login"></label>
          <input name="username" placeholder="Username" class="form-control">
          <div class="input-group-append">
            <button type="submit" class="btn btn-dark">Login</button>
          </div>
        </form>
        <% } %>
  </nav>
</header>